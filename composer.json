{
    "name": "imemento/http",
    "description": "iMemento HTTP Helpers",
    "homepage": "https://gitlab.com/imemento/composer/packages/http",
    "license": "MIT",
    "authors": [
        {
            "name": "George Stan",
            "email": "contact@georgestan.com",
            "homepage": "http://imemento.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.0",
        "imemento/exceptions": "~5.5.0",
        "imemento/jwt": "~5.5.0",
        "imemento/support": "~5.5.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^5.7.5"
    },
    "autoload": {
        "psr-4": {
            "iMemento\\Http\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "iMemento\\Http\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {"type": "composer", "url": "https://repo.packagist.com/imemento/"},
        {"packagist.org": false}
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
